<%- if @article -%>
<h2><%= link_to @article.title, @article.path %></h2>
<p><%= @article.date.strftime('%Y/%m/%d') %></p>
<%= @article.body %>
<%- end -%>

<%- if @archives.present? -%>
<p>other articles</p>
<ul>
  <%- @archives.each do |article| -%>
  <li><%= link_to article.title, article.path %></li>
  <%- end -%>
</ul>
<%- end -%>
